package xtdxUser;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class ServerMain {
	
	//主菜单打印的方法
	static void printMenu(){
		System.out.println("*******欢迎使用用户管理系统****");
		System.out.println("1.用户列表");
		System.out.println("2.添加用户");
		System.out.println("3.删除用户");
		System.out.println("4.编辑用户");
		System.out.println("请选择（1-4）：");
		Scanner sc=new Scanner(System.in);
		//获取输入的类型
		int type=sc.nextInt();
		switch(type){ //判断选择
			case 1: //用户列表
				findAll();
				break;
			case 2://新增用户
				add();
				break;
			case 3://删除用户
				delete();
				break;
			case 4://编辑用户
				update();
				break;		
		}
	}
	
	public static void main(String[] args) {
		printMenu();
	}

	/***
	 * 用户更新
	 */
	private static void update() {
		
	}

	//删除
	private static void delete() {
		Scanner sc=new Scanner(System.in);
		System.out.println("****删除用户信息*****");
		System.out.println("索引列\t编号\t姓名\t年龄\t性别");
		for(int i=0;i<list.size();i++){
			User user=list.get(i);
			System.out.println(
					i+"\t"+user.getId()+"\t"+
					user.getName()+"\t"+user.getAge()
					+"\t"+user.getSex()
			);
			
		}
		System.out.println("请输入要删除的索引列：");
		//获取当前输入的索引
		int index=sc.nextInt();
		if(index<0||index>(list.size()-1)){
			System.out.println("当前索引不存在");
			//重新输出删除的信息
			delete();
		}
		//移除
		list.remove(index);
		//打印菜单列表
		printMenu();
		
		
	}

	/**
	 * 新增
	 */
	private static void add() {
		Scanner sc=new Scanner(System.in);
		System.out.println("*****添加用户信息*****");
		System.out.println("输入编号：");
		//获取键盘输入的编号
		int id=Integer.parseInt(sc.nextLine());
		System.out.println("输入姓名：");
		String name=sc.nextLine();
		System.out.println("输入性别：");
		String sex=sc.nextLine();
		System.out.println("输入年龄：");
		//Integer.parseInt 将字符串强转成整形
		int age=Integer.parseInt(sc.nextLine());
		User zhangsan=new User();
		zhangsan.setId(id);
		zhangsan.setName(name);
		zhangsan.setSex(sex);
		zhangsan.setAge(age);
		list.add(zhangsan);
		printMenu();
	}
	
	
	//相当于数组，java中叫做集合
	private static List<User> list=new ArrayList<User>();
	
	/**
	 * 查询用户信息
	 */
	private static void findAll() {
		Scanner sc=new Scanner(System.in);
		//list.add(zhangsan);
		//size() 获取集合中存储的数量
		//add() 添加数据到集合
		//for循环打印数据
		System.out.println("编号\t姓名\t年龄\t性别");
		for(int i=0;i<list.size();i++){
			//get 获取当前索引对象
			User zhangsan=list.get(i);
			System.out.println(zhangsan.getId()+"\t"
		     +zhangsan.getName()+"\t"+zhangsan.getAge()
		     +"\t"+zhangsan.getSex());
		}
		
		//判断是否存在数据
		if(list.size()==0){
			System.out.println("暂无数据！");
		}
		
		System.out.println("返回菜单，请输入return");
		String str=sc.nextLine();
		//equals字符串进行判断
		while(!"return".equals(str)){
			System.out.println("输入错误，请输入：return");
			str=sc.nextLine();
		}
		printMenu();
	}

}
